@model EmpManager.Models.EmployeeToProject

@{
    ViewData["Title"] = "AssignProject";
}

<h1>AssignProject</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AssignProject">
            <div asp-validation-summary="ModelOnly" class="text-danger">
               
            </div>
            <p class="text-danger">@Html.ValidationSummary()</p>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="EmployeeId" class="control-label"></label>
               <select asp-for="EmployeeId" class="form-control"
                        asp-items="@(new SelectList(Model.EmpList, "EmployeeId", "FirstName"))"></select>
            </div>
            <div class="form-group">
                <label asp-for="ProjectId" class="control-label"></label>
                 <select asp-for="ProjectId" class="form-control"
                        asp-items="@(new SelectList(Model.ProjectList, "ProjectId", "Name"))"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Assign" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
